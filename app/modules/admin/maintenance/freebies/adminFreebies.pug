          $.post('/admin/adminFreebies/query',{id:idNow})
          .done(data=>{
            console.log(data)
              $('#freebieName').append(`${data[0].service_name}`)
              $('#updateAppend').append(`
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group has-default bmd-form-group">
                        <label>Points Required </label>
                        <star>*</star>
