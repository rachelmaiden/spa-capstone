  script.
    $(document).ready(function(){
        $('.addServiceType').click(function(){
          var service_type_desc = $('#type_desc').val()
          if($('#type_desc').val()==0)
          {
            swal({
              title: 'Please double check the fields.',
              text: 'Make sure all required fields have value.', 
              icon: 'warning'
            })
          }
          else
          {
            $.post('./adminServiceType',{
              service_type_desc: $('#type_desc').val(),
            }).done(function(data){
              if(data.alertDesc== 0)
                {
                  swal({
                    title: "Success",
                    text: "New Service Type has been Added",
                    icon: 'success'
                  }).then(function(){
                    location.reload();
                  })
                }
              else if(data.alertDesc==1)
                {
                  swal({
                    title: "Error",
                    text: "Error",
                    icon: 'error'
                  })
                }
              else if(data.alertDesc==2)
              {
                swal({
                    title: service_type_desc+" already exists.",
                    icon: 'warning'
                  })
              }
            
            })
          }
        })
      })
