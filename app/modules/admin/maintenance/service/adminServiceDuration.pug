  script.
    $(document).ready(function(){
        $('.addServiceDuration').click(function(){
          var service_duration_desc = $('#duration_desc').val()
          if($('#duration_desc').val()==0)
          {
            swal({
              title: 'Please double check the fields.',
              text: 'Make sure all required fields have value.', 
              icon: 'warning'
            })
          }
          else
          {
            $.post('./adminServiceDuration',{
              service_duration_desc: $('#duration_desc').val(),
            }).done(function(data){
              if(data.alertDesc== 0)
                {
                  swal({
                    title: "Success",
                    text: "New service duration has been added.",
                    icon: 'success'
                  }).then(function(){
                    location.reload();
                  })
                }
              else if(data.alertDesc==1)
                {
                  swal({
                    title: "Error",
                    text: "Error",
                    icon: 'error'
                  })
                }
              else if(data.alertDesc==2)
              {
                  swal({
                    title: service_duration_desc+" already exists.",
                    icon: 'warning'
                  })
              }
            })
          }
        })
      })
