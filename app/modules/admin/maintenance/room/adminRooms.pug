    $(document).ready(function(){
      $('.addButton').click(function(){
        var room_type_id= $('#room_type').val()
        var room_name = $('#room_name').val()
        var bed_qty = $('#bed_qty').val()
        var room_rate = $('#room_rate').val()
        var room_gender = $('#room_gender').val()

