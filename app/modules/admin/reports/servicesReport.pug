  script.
    $(document).ready(function(){
      $('.selectpickerChange').on('change',function(){
        var report_type = $(this).val()
        $.post('./ChangeReport',{report_type}).done(function(data){
          console.log(data)
          if(report_type == 'loyalty')
          {
            $('#Name').append('Loyalty Membership')
          }
          else if(report_type == 'amenity')
          {
            $('#Name').append('Amenity')
          }
          else if(report_type == 'reservation')
          {
            $('#Name').append('Reservation')
          }
          for(var i=0;i<data.length;i++)
          {
            $('#ReportChange').append(`<tr>
              <td>${data[i].payment_date}</td>
              <td>
              </td>
              <td></td>
              <td> </td>
              <td>₱${data[i].Total}.00</td>
              <td> </td>
              </tr>`)
          }
        $('#datatables').DataTable({
          "pagingType": "full_numbers",
          "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
          responsive: true,
          language: {
          search: "_INPUT_",
          searchPlaceholder: "Search records",
          },
          retrieve:true,
          dom: 'Bfrtip',
          buttons: [
              { extend:'copy', attr: { id: 'allan' } }, 'csv', 'excel', 'pdf', 'print'
          ],
            
          });
           $('#datatables').DataTable({
            initComplete: function () {
                    this.api().columns().every( function () {
                        var column = this;
                        var select = $('<select><option value=""></option></select>')
                            .appendTo( $(column.footer()).empty() )
                            .on( 'change', function () {
                                var val = $.fn.dataTable.util.escapeRegex(
                                    $(this).val()
                                );
        
                                column
                                    .search( val ? '^'+val+'$' : '', true, false )
                                    .draw();
                            });
        
                        column.data().unique().sort().each( function ( d, j ) {
                            select.append( '<option value="'+d+'">'+d+'</option>' )
                        });
                    });
                },
                retrieve:true
        })

        })
        $('#ReportChange').empty()
        $('#Name').empty()
      })
    })