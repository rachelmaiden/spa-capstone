        .section
          .container
            label
              h3= `${date}`
              h3 Body Massage
              |  Note: You can only choose 1 (one)
            select.selectpicker(data-style='btn btn-info btn-block', title='Select Body Massage Service', data-size='7')
              each bmsg in bmsgs  
                option(value=`${bmsg.service_id}`)= bmsg.service_name+" ("+bmsg.service_duration_desc+")"
              
            label
              h3 Body Scrub
              |  Note: You can only choose 1 (one)
            select.selectpicker(data-style='btn btn-info btn-block', title='Select Body Scrub Service', data-size='7')
              each bscrub in bscrubs  
                option(value=`${bscrub.service_id}`)= bscrub.service_name+" ("+bscrub.service_duration_desc+")"
              
            label
              h3 Add-on Massage
              |  Note: You can only choose 1 (one)
            select.selectpicker(data-style='btn btn-info btn-block', title='Select Add-on Massage Service', data-size='7')
             each addons in addonss  
                option(value=`${addons.service_id}`)= addons.service_name+" ("+addons.service_duration_desc+")"
            label
              h3 Promo
            select.selectpicker(data-style='btn btn-info btn-block', title='Select Promo', data-size='7')
              each promo in promos  
                option(value=`${promo.promobunlde_id}`)= promo.promobundle_name+" ("+promo.promobundle_duration+")"
            label
              h3 Amenity Usage
            select.selectpicker(data-style='btn btn-info btn-block', title='Number of Hours for Amenities Usage', data-size='7')
              option(value='ams1') 1 hour
              option(value='ams2') 2 hours
              option(value='ams3') 3 hours
              option(value='ams4') 4 hours
              option(value='ams5') 5 hours
              option(value='ams6') 6 hours
              option(value='ams7') 7 hours
              option(value='ams8') 8 hours
              option(value='ams9') 9 hours
              option(value='ams10') 10 hours
              option(value='ama11') 11 hours
              option(value='ams12') 12 hours
            label
              h3 Room Type
            select.selectpicker(data-style='btn btn-info btn-block', title='Select Room Type', data-size='7')
              each room in rooms
                option(value=`${room.room_id}`)= room.room_name
