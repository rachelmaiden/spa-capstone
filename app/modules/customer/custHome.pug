              <button type="button" class="btn btn-default btn-link closeButton">Never mind</button>
          </div>
          <div class="divider"></div>
          <div class="right-side">
              <button type="button" class="btn btn-info btn-link">Next</button>
          </div>`)
          $('#ReservationModal').on('hidden.bs.modal', function (){
            $('#reservationFooter').empty()
          })
