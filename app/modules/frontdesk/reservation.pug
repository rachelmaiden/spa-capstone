   $(document).ready(function(){
        $('.checkbox').on('change.bootstrapSwitch', function(e){
          if(e.target.checked==true)
          {
            var qnty
            var y=$(this).val()
            var price = document.getElementById(y).value
            var quantity = prompt("Quantity")

            if (quantity==null || quantity=="")
