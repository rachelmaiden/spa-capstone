    $(document).ready(function(){
      $('.submitButton').click(function(){
        var newDate= $('#calendar').val()
        var vals = newDate.split('-');
        var year = vals[0];
        var month = vals[1];
        var date = vals[2];
        $.post('/adminCustomer',{
          firstname:$('#firstname').val(),
          lastname:$('#lastname').val(),
          middlename:$('#middlename').val(),
          gender:$('#gender').val(),
          contact_no:$('#contact_no').val(),
