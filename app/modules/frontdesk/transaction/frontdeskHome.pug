  script.
    $(document).ready(function(){
        // VIEW SEARCH RESULT
        $('.searchButton').click(function(){
          var searchBar = $('#searchBar').val();
            console.log(searchBar)
            $.post('frontdeskHome/search',{searchBar:searchBar})
          .done(data=>{
            $('#viewAppend').append(`
                  <div class="row">
                    <div class="col-md-8" id="resultField">
                      <div class="form-group has-default bmd-form-group">
                      
                      </div>
                    </div>
                  </div>
            `)
            if(data.out.length >0){
              for(var i=0; i<data.out.length;i++){
                console.log()
                $('#resultField').append(`
                <ul style="list-style-type:none">
                <li>
                <a href='selectDate/${data.out[i].cust_id}'>${data.out[i].cust_fname} ${data.out[i].cust_mname} ${data.out[i].cust_lname}<a>
                </li>
                <ul>`)
              }
            }
            else{
              console.log("WALANG RESULTS")
             $('#resultField').append(`<li>record not found</li>`)
            }
            $('#searchResult').modal('show')
            $('#SearchCustomer').modal('hide')
            $('#searchResult').on('hidden.bs.modal', function (){
                $('#resultField').remove()
              });
          })
        })
    })