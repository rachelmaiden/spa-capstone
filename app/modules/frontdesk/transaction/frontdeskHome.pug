    $(document).ready(function(){
        // VIEW SEARCH RESULT
        $('.searchButton').click(function(){
          var searchBar = $('#searchBar').val();
            console.log(searchBar)
            $.post('frontdeskHome/search',{searchBar:searchBar})
          .done(data=>{
            $('#viewAppend').append(`
                  <div class="row">
                    <div id="resultField">
          
                      
                    </div>
                  </div>
            `)
            if(data.out.length >0){
              for(var i=0; i<data.out.length;i++){
                console.log()
                $('#resultField').append(`
                <ul style="list-style-type: none; ">
                <li>
                <a href='selectDate/${data.out[i].cust_id}' style="color: black;" >${data.out[i].cust_fname} ${data.out[i].cust_mname} ${data.out[i].cust_lname}</a>
                </li>
                </ul>`)
              }
            }
            else{
              console.log("WALANG RESULTS")
             $('#resultField').append(`
            <div class="col-md-7">
                <h4> Record not Found </h4>
            </div>`)
            }
            $('#searchResult').modal('show')
            $('#SearchCustomer').modal('hide')
            $('#searchCustomer').on('hidden.bs.modal', function (){
                $('#searchBar').val('')
              });

            $('#searchResult').on('hidden.bs.modal', function (){
                $('#resultField').remove()
              });
            $('#registration').on('hidden.bs.modal', function (){
              $('body').addClass('test');
              });
          })
        })
        $('.cancelButton').click(function(){
          $('#searchResult').modal('hide')
          $('body').addClass('test');
        })
    })

