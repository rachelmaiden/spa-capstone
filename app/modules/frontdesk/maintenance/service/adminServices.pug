                  .done(data=>{
                      if(data){
                          swal({
                          title:'Success', 
                          text:'Service Information Updated', 
                          icon:'success'
                          }).then(function(){
                            location.reload();
                          })
                        $('#updateModal').modal('hide');
                      }
                  })
                })
              })

          })
