      $(document).ready(function(){
        $('.switch-icon').on('click', function(){
          alert('hello')
        });
        $('.deleteButton').click(function(){
            var idNow = $(this).val();
            console.log(idNow)
            $('#modal-warning').modal('show');
            
            $('#deleteSubmit').css('display', 'block');
            $('#cancelButton').css('display', 'block');
                $('#cancelButton').click(function(){
                  var idNow = 0;
                });
                $('#deleteSubmit').click(function(){
                $.post('/adminServices/delete',{id:idNow})
                    .done(data=>{
                    if(data){
                        swal({
                        title:'Success', 
                        text:'Service Deleted', 
                        icon:'success'
                        }).then(function(){
                          location.reload();
                        })
                      $('#updateModal').modal('hide');
                    }
                  })
            });
            
        });
        $('#modal-warning').on('hidden.bs.modal', function (){
                var idNow = 0;
                console.log(idNow)
                });
        $('.updateButton').click(function(){
          var idNow = $(this).val();
              $.post('/adminServices/query',{id1:idNow})
          .done(data=>{
            console.log(data)
              $('#updateAppend').append(`
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group has-default bmd-form-group">
                        <label>Service Type*
                          <select id="service_type" title="${data.out1.service_type_desc}" data-style="btn-info" name="type" class="selectpicker">
                          </select>
                        </label>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group has-default bmd-form-group">
                        <label>Service Name*</label>
                        <input type="text" id="service_name" placeholder="${data.out1.service_name}" value="${data.out1.service_name}" name="name" class="form-control"/>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group has-default bmd-form-group">
                        <label>Service Duration*
                          <select id="service_duration" title="${data.out1.service_duration_desc}" data-style="btn-info" name="duration" class="selectpicker">
                          </select>
                        </label>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group has-default bmd-form-group">
                        <label>Service Price*</label>
                        <input type="text" id="service_price" value="${data.out1.service_price}" placeholder="${data.out1.service_price}" name="price" class="form-control"/>
                      </div>
                    </div>
                  </div>
                  `)

                for(var i=0; i<data.out2.length;i++){
                console.log(data.out2[i].service_type_desc)
                $('#service_type').append(`<option value="${data.out2[i].service_type_id}">${data.out2[i].service_type_desc}</option>`)
                }
                for(var i=0; i<data.out3.length;i++){
                console.log(data.out3[i].service_duration_desc)
                $('#service_duration').append(`<option value="${data.out3[i].service_duration_id}">${data.out3[i].service_duration_desc}</option>`)
                }
                $('#service_type').selectpicker();
                $('#service_duration').selectpicker();
              $('#updateModal').modal('show')
              $('#updateModal').on('hidden.bs.modal', function (){
                $('#updateAppend').empty()
                });
              $('#cancelButton').click(function(){
                $('#updateAppend').remove();
              })
              $('#updateSubmitButton').click(function(){
                  $.post('/adminServices/update',{
                  service_type:$('#service_type').val(),
                  service_name:$('#service_name').val(),
                  service_price:$('#service_price').val(),
                  service_duration:$('#service_duration').val(),
                  service_availability:$('#service_availability').val(),
                  
                  id1:idNow
