                      title: "Success",
                      icon: "success"
                    }).then(function(){
                      $('#RegisterModal').modal('hide')
                      location.reload()
                    })
                  }
                else if(data.alertDesc==3)
                  {
                    swal({
                      title:'Not Success', 
                      text:'Username Already Exist', 
                      icon:'warning'
                      }).then(function(){
                        $('#RegisterModal').modal('show')
                      })
                  }
                else if(data.alertDesc==1)
                  {
                    swal({
                      title: 'ERROR',
                      icon: 'error'
                    })
                  }
              })
        })
      })
